<%= form_for(@team, html:{class:"form-horizontal", role:"form"}) do |f| %>
	<%= render partial:'teams/errors', locals:{instance:@team}  %>
	
	<div class="form-group">
		<%= f.label :name, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :name, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :description, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :description, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
    <%= f.collection_check_boxes(:superhero_ids, @superheroes, :id, :name) do |b| %>
        <span>
            <%= b.check_box %>
            <%= b.label %>
        </span>
    <% end %>
  </div>


	<div class="actions col-sm-offset-2">
		<%= f.submit class:"btn btn-primary" %>
		<%= link_to 'Cancel', teams_path, class:"btn btn-default" %>
	</div>


<% end %>
