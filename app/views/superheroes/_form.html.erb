<%= form_for(@superhero, html:{class:"form-horizontal", role:"form"}) do |f| %>
	<%= render partial:'superheroes/errors', locals:{instance:@superhero}  %>
	
	<div class="form-group">
		<%= f.label :name, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :name, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :height, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :height, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :bio, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :bio, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :image_url, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :image_url, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
    <%= f.collection_check_boxes(:team_ids, @teams, :id, :name) do |b| %>
        <span>
            <%= b.check_box %>
            <%= b.label %>
        </span>
    <% end %>
  </div>


	<div class="actions col-sm-offset-2">
		<%= f.submit class:"btn btn-primary" %>
		<%= link_to 'Cancel', superheroes_path, class:"btn btn-default" %>
	</div>


<% end %>
